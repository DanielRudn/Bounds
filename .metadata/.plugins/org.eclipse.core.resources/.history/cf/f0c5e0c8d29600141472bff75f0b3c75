package com.dr.bounds.maps;

import com.DR.dLib.dTweener;
import com.badlogic.gdx.graphics.Texture;
import com.dr.bounds.Player;

public class dAsteroidObstacle extends dObstacle {

	private float fallSpeed = 0f;
	private final float ROTATION_DURATION = 4f;
	private float rotationTime = 0f;
	
	public dAsteroidObstacle(float x, float y, Texture texture, Player p) {
		super(x, y, texture, p);
		fallSpeed = 5f + MapGenerator.rng.nextFloat()*MapGenerator.rng.nextInt(5);
		setOriginCenter();
	}
	
	@Override
	public void update(float delta)
	{
		super.update(delta);
		setY(getY() + fallSpeed);
		if(rotationTime < ROTATION_DURATION)
		{
			rotationTime+=delta;
			getSprite().setRotation(dTweener.ExponentialEaseOut(rotationTime, 0, 360, ROTATION_DURATION));
		}
		else
		{
			rotationTime = 0;
		}
	}

}
