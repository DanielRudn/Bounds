package com.dr.bounds.screens;

import com.DR.dLib.dScreen;
import com.badlogic.gdx.graphics.Texture;
import com.dr.bounds.MainGame;

public abstract class dScreenState extends dScreen {

	protected MainGame mainGame;
	
	public dScreenState(float x, float y, Texture texture, MainGame game) {
		super(x, y, texture);
		mainGame = game;
	}
	
	/**
	 * User pressed back button
	 */
	public void back();
	
	/**
	 * switch screens to the new screen, transition order etc is managed by the current state
	 * @param newScreen Screen that will be switched
	 */
	public void switchScreen(dScreenState newScreen);

}
