package com.dr.bounds.screens;

import com.DR.dLib.dTweener;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;

public class DialogBoxScreen extends dScreen {

	// time for the screen to fade and dialog box to slide in
	private float showTime = 0;
	private final float SHOW_DURATION = 2f;
	
	
	public DialogBoxScreen(float x, float y, Texture texture) {
		super(x, y, texture);
		setColor(0,0,0,0);
	}
	
	@Override
	public void update(float delta)
	{
		super.update(delta);
		if(showTime <= SHOW_DURATION)
		{
			showTime+=delta;
			setAlpha(dTweener.LinearEase(showTime, 0, 1f, SHOW_DURATION));
		}
	}
	
	@Override
	public void render(SpriteBatch batch)
	{
		super.render(batch);
	}
	
	@Override
	public void show()
	{
		showTime = 0;
	}

}
